<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/et_screen_id"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPurple"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_division_id"
        android:text="/"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/et_screen_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_multiplication_id"
        android:text="*"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:textStyle="bold"
        android:layout_below="@id/et_screen_id"
        android:layout_toRightOf="@id/bt_division_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_del_id"
        android:text="Del"
        android:textStyle="bold"
        android:background="@color/colorWhite"
        android:layout_below="@id/et_screen_id"
        android:layout_toRightOf="@id/bt_multiplication_id"
        android:textSize="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="90dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_seven_id"
        android:text="7"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:layout_below="@id/bt_division_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_eight_id"
        android:text="8"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/bt_multiplication_id"
        android:layout_toRightOf="@id/bt_seven_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_nine_id"
        android:text="9"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/bt_del_id"
        android:layout_toRightOf="@id/bt_eight_id"
        android:background="@color/colorBlue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_minus_id"
        android:text="-"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/colorMaroon"
        android:layout_below="@id/bt_del_id"
        android:layout_toRightOf="@id/bt_nine_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_four_id"
        android:text="4"
        android:textSize="30dp"
        android:layout_below="@id/bt_seven_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_five_id"
        android:text="5"
        android:textSize="28dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/bt_eight_id"
        android:layout_toRightOf="@id/bt_four_id"
        android:background="@color/colorRed"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_six_id"
        android:text="6"
        android:textSize="30dp"
        android:layout_below="@id/bt_nine_id"
        android:layout_toRightOf="@id/bt_five_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_plus_id"
        android:text="+"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/bt_minus_id"
        android:layout_toRightOf="@id/bt_six_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_one_id"
        android:text="1"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/bt_four_id"
        android:background="@color/colorBlue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_two_id"
        android:text="2"
        android:textSize="27dp"
        android:layout_below="@id/bt_five_id"
        android:layout_toRightOf="@id/bt_one_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_three_id"
        android:text="3"
        android:textSize="30dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:layout_below="@id/bt_six_id"
        android:layout_toRightOf="@id/bt_two_id"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_zero_id"
        android:text="0"
        android:textSize="30dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/bt_one_id"
        android:paddingRight="100dp"
        android:paddingLeft="60dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_decimal_id"
        android:text="."
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/bt_three_id"
        android:layout_toRightOf="@id/bt_zero_id"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_answer_id"
        android:text="="
        android:textSize="30dp"
        android:layout_below="@id/bt_plus_id"
        android:layout_toRightOf="@id/bt_three_id"
        android:paddingBottom="65dp"
        android:background="@color/colorGreen"/>


















</RelativeLayout>